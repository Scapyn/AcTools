{% extends 'base.html.twig' %}

{% block title %}ActEvent index{% endblock %}

{% block body %}
    <h1>ActEvent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for act_event in act_events %}
            <tr>
                <td>{{ act_event.id }}</td>
                <td>{{ act_event.name }}</td>
                <td>{{ act_event.date ? act_event.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ act_event.type }}</td>
                <td>
                    <a href="{{ path('act_event_show', {'id': act_event.id}) }}">show</a>
                    <a href="{{ path('act_event_edit', {'id': act_event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('act_event_new') }}">Create new</a>
{% endblock %}